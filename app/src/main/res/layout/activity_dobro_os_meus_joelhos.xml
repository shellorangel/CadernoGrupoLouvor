<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarAlwaysDrawHorizontalTrack="true"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    tools:context=".QuandoChego">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dobro os meus joelhos Levo minha vida ao Teu altar Clamo pelo Teu sangue Ó meu Jesus, vem derramar "
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f45c5c"
                android:text="Dá Tua vida (dá tua vida) Sobre meu ser (sobre meu ser) O meu pecado (o meu pecado) Vêm perdoar  "
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dá-me   a Tua  bênção Pois nada sou, Senhor sem Teu perdão "
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f45c5c"
                android:text="Põe tua vida (põe tua vida) Sobre meu ser (sobre meu ser) O meu pecado (o meu pecado) Vem perdoar     Põe tua vida (põe tua vida) Sobre meu ser (sobre meu ser) O meu pecado (o meu pecado) Vem perdoar "
                android:textSize="24sp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>